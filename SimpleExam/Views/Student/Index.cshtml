@model IEnumerable<SimpleExam.ViewModels.StudentViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Students</h2>

<p>
    @Html.ActionLink("Create New", "New")
</p>
<table id="students" class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Class)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.LastName
            </td>
            <td>
                @item.Class
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @*@Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
                <button data-student-id="@item.Id" class="btn-link js-delete">Delete</button>
            </td>
        </tr>
    }

</table>

@section scripts
{
    <script>
        function deleteStudent (id) {
            var url = '@Url.Action("Delete")';
            $.ajax(url, { data: { id:id },
                type: "POST",
                error: function(x) {
                    alert('xeta:' + x.statusText);
                },
                success: function(data) {
                    location.href = '@Url.Action("Index")';
                }
            });
        }
        $(function() {
            $("#students").on("click",
                ".js-delete",
                function() {
                    if (confirm("Are you sure you want to delete this student?")) {
                        var id = $(this).attr("data-student-id");
                        deleteStudent(id);
                    };
                });
        });
    </script>
}